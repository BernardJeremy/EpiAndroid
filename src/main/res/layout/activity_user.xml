<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.intradroid.dt.intradroid.MainActivity">

    <RelativeLayout
        android:background="@color/epitech_grey"
        android:layout_height="@dimen/header_height"
        android:layout_width="match_parent"
        android:padding="@dimen/header_padding">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="@dimen/header_height"
            android:src="@drawable/icon_menu">
        </ImageView>
        <LinearLayout
            android:background="@color/epitech_grey_lighter"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="280dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_height="@dimen/header_search_height"
                android:layout_width="@dimen/header_search_height"
                android:layout_marginLeft="@dimen/header_search_margin_left"
                android:layout_marginTop="@dimen/header_search_margin_top"
                android:src="@drawable/icon_search">
            </ImageView>
            <EditText
                android:background="#00000000"
                android:hint="@string/search_hint"
                android:inputType="text"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/header_search_margin_left"
                android:layout_width="match_parent"
                android:textColorHint="@color/epitech_grey_darker"
                android:textStyle="bold">
            </EditText>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/user_margin_block"
        android:padding="@dimen/user_padding_block">
        <ImageView
            android:layout_height="@dimen/user_info_size"
            android:layout_width="@dimen/user_info_size"
            android:src="@drawable/dean_winchester">
        </ImageView>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_info_margin"
            android:layout_width="@dimen/user_info_width"
            android:orientation="vertical">
            <TextView
                android:layout_height="@dimen/user_name_height"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/user_name_margin_top"
                android:layout_marginBottom="@dimen/user_name_margin_bottom"
                android:text="Dean Winchester"
                android:textColor="@color/epitech_grey"
                android:textSize="@dimen/user_name_size"
                android:textStyle="bold"/>
            <TextView
                android:layout_height="@dimen/user_info_height"
                android:layout_marginLeft="@dimen/user_info_marging_left"
                android:layout_width="match_parent"
                android:text="winche_d"
                android:textColor="@color/epitech_grey_lighter"/>
            <TextView
                android:layout_height="@dimen/user_info_height"
                android:layout_marginLeft="@dimen/user_info_marging_left"
                android:layout_width="match_parent"
                android:text="Epitech 2017"
                android:textColor="@color/epitech_grey_lighter"/>
            <TextView
                android:layout_height="@dimen/user_info_height"
                android:layout_marginLeft="@dimen/user_info_marging_left"
                android:layout_width="match_parent"
                android:text="Cycle Bachelor"
                android:textColor="@color/epitech_grey_lighter"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_info_margin"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="@dimen/user_gpa_credit_height"
                    android:layout_marginLeft="@dimen/user_info_marging_left"
                    android:layout_width="wrap_content"
                    android:text="@string/credit"
                    android:textColor="@color/epitech_grey"
                    android:textSize="@dimen/user_gpa_credit_size"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_height="@dimen/user_gpa_credit_height"
                    android:layout_marginLeft="@dimen/user_info_marging_left"
                    android:layout_width="wrap_content"
                    android:text="120"
                    android:textColor="@color/epitech_grey"
                    android:textSize="@dimen/user_gpa_credit_size"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="@dimen/user_gpa_credit_height"
                    android:layout_marginLeft="@dimen/user_info_marging_left"
                    android:layout_width="wrap_content"
                    android:text="@string/gpa"
                    android:textColor="@color/epitech_grey"
                    android:textSize="@dimen/user_gpa_credit_size"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_height="@dimen/user_gpa_credit_height"
                    android:layout_marginLeft="@dimen/user_info_marging_left"
                    android:layout_width="wrap_content"
                    android:text="2.90"
                    android:textColor="@color/epitech_grey"
                    android:textSize="@dimen/user_gpa_credit_size"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/user_margin_block"
        android:padding="@dimen/user_padding_block"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Address : "
            android:textColor="@color/epitech_grey"
            android:textStyle="bold"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Lawrence"
            android:textColor="@color/epitech_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_info_marging_left"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone : "
                android:textColor="@color/epitech_grey"
                android:textStyle="bold"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="06.59.07.26.45"
                android:textColor="@color/epitech_blue"/>
        </LinearLayout>
    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="@dimen/table_width"
        android:layout_marginTop="@dimen/user_margin_block"
        android:padding="@dimen/user_padding_block">
        <LinearLayout
            android:layout_height="@dimen/title_height"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="@dimen/title_height"
                android:layout_width="@dimen/user_title_grade"
                android:text="@string/grades"
                android:textColor="@color/epitech_grey"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/filter"
                android:textColor="@color/red_active"
                android:textSize="@dimen/filter_size"
                android:textStyle="bold"/>
        </LinearLayout>

        <TableRow
            android:background="@color/blue_lighter"
            android:layout_width="match_parent"
            android:padding="@dimen/row_padding">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="@dimen/row_width"
                android:text="Etude de cas - Soutenance finale"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="50"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:padding="@dimen/row_padding">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="@dimen/row_width"
                android:text="Etude de cas - Soutenance finale"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="14"/>
        </TableRow>
        <TableRow
            android:background="@color/blue_lighter"
            android:layout_width="match_parent"
            android:padding="@dimen/row_padding">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="@dimen/row_width"
                android:text="Etude de cas - Soutenance finale"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="14"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
