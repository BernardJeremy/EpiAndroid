<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <CheckBox
        android:button="@drawable/checkbox"
        android:layout_height="@dimen/checkbox"
        android:layout_marginLeft="@dimen/checkbox"
        android:layout_width="@dimen/checkbox"/>
    <TextView
        android:layout_height="@dimen/checkbox_text_width"
        android:layout_width="match_parent"
        android:text="Modules in my current semester"
        android:textColor="@color/epitech_grey"
        android:textSize="@dimen/checkbox_text_size"/>
</LinearLayout>
