<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.intradroid.dt.intradroid.LoginActivity">

    <ImageView
        android:layout_width="@dimen/login_img_size"
        android:layout_height="@dimen/login_img_size"
        android:id="@+id/logo"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/user_margin_block"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_login"
        android:id="@+id/input_login"
        android:gravity="center_horizontal"
        android:layout_below="@+id/logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/main_user_name_margin_bottom"
        android:layout_marginRight="@dimen/login_input_margin"
        android:layout_marginLeft="@dimen/login_input_margin"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password"
        android:password="true"
        android:id="@+id/input_password"
        android:gravity="center_horizontal"
        android:layout_below="@+id/input_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/login_input_margin"
        android:layout_marginLeft="@dimen/login_input_margin"
        android:layout_marginTop="@dimen/main_user_name_margin_bottom" />

    <Button
        android:background="@color/epitech_blue"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_connect"
        android:id="@+id/connect_button"
        android:layout_below="@+id/input_password"
        android:layout_gravity="end"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_button_margin" />

</RelativeLayout>
